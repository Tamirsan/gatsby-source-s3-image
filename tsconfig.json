{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "lib": ["esnext", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".",
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**"]
}
